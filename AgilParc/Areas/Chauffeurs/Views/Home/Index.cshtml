
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="dropdown-menu" style="display:none" id="mySidebar">
    <button class="w3-bar-item w3-button w3-large"
            onclick="w3_close()">
        Close &times;
    </button>
    <a class="nav-link" asp-action="Index" asp-controller="Assurences">Assurences</a>
    <a class="nav-link" asp-action="Index" asp-controller="EquipementEmbarques">Equipements</a>
    <a class="nav-link" asp-action="Index" asp-controller="Maintenances">Maintenaces</a>
    <a class="nav-link" asp-action="Index" asp-controller="Vehicules">Vehicules</a>
    <a class="nav-link" asp-action="Index" asp-controller="Visites">Visites</a>
</div>

<div id="main">

    <div class="w3-teal">
        <button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button>
    </div>

</div>

<script>
    function w3_open() {
        document.getElementById("main").style.marginLeft = "25%";
        document.getElementById("mySidebar").style.width = "25%";
        document.getElementById("mySidebar").style.display = "block";
        document.getElementById("openNav").style.display = 'none';
    }
    function w3_close() {
        document.getElementById("main").style.marginLeft = "0%";
        document.getElementById("mySidebar").style.display = "none";
        document.getElementById("openNav").style.display = "inline-block";
    }
</script>